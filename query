    "import sqlite3\n",
    "from pprint import pprint\n",
    "\n",
    "db = sqlite3.connect('BDD/moviesdb.db')\n",
    "\n",
    "cursor = db.cursor()\n",
    "\n",
    "a = cursor.execute(\"SELECT tag, count(tag) as nombre FROM tags GROUP by tag ORDER by nombre DESC LIMIT 10\")\n",
    "\n",
    "result1 = a.fetchall()\n",
    "\n",
    "\n",
    "db.commit()\n",
    "cursor.close()\n",
    "db.close()\n",
    "\n",
    "print(\"\\n ce tag est apparue :\\n\")\n",
    "for element in result1:\n",
    "    print(element[0],\" = \",element[1],\"fois\")\n",
    "    print(\"__\")\n"
